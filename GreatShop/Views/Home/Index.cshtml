    <head>
  
        <!-- Bootstrap core CSS -->
        <link href="/css/Home.css" rel="stylesheet">

    </head>
    <body>



     

            <div id="myCarousel2" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="first-slide" src="/Images/Company/OpenSign.jpg" alt="First slide">
                        <div class="container">
                            <div class="carousel-caption text-left">
                                <h1>Now Open!</h1>
                                <p>Sign Up For Great Offers Now!</p>
                                <p><a class="btn btn-lg btn-primary" href="/Identity/Account/Register" role="button">Register</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="second-slide" src="/Images/Company/PerformanceCar.jpg" alt="Second slide">
                        <div class="container">
                            <div class="carousel-caption">
                                <h1>Build Your Dream Car</h1>
                                <p>Shop Custom Products!</p>
                                <p><a class="btn btn-lg btn-secondary" href="/Product" role="button">Shop Now</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="third-slide" src="/Images/Company/Engine.jpg" alt="Third slide">
                        <div class="container">
                            <div class="carousel-caption text-right">
                                <h1>Buy The Right Parts</h1>
                                <p>Login to view Coupon Codes Available For Discounts!</p>
                                <p><a class="btn btn-lg btn-primary" href="/Identity/Account/Login" role="button">Login</a></p>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>


            <!-- Marketing messaging and featurettes
            ================================================== -->
            <!-- Wrap the rest of the page in another container to center all the content. -->

            <div class="container marketing">

                <!-- Three columns of text below the carousel -->
                <div class="row">
                    <div class="col-lg-4">
                        <img class="rounded-circle" src="~/Images/Product/04bdbc5f-fc9b-4e32-b496-0e2ac516132f.jpg" alt="Generic placeholder image" width="140" height="140">
